@model IEnumerable<SweetStack.DomainObjects.SweetTest>

@{
    ViewBag.Title = "Index";
}

<h1 class="sweetTitle">SweetTests</h1>
<table class="table table-striped table-responsive">
    <tr>
        <th class="col-md-8">
            Title
        </th>
        <th class="col-md-2">
            Created
        </th>
        <th class="col-md-2"></th>
    </tr>
    @if (Model.Any())
    {
        <tr>
            <td colspan="3">
                <div class="alert alert-info">
                    @Model.Count() tests found!
                </div>
            </td>
        </tr>
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timestamp)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info" })
                @Html.ActionLink("Run", "Run", new { id = item.Id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "pull-right btn btn-xs btn-danger" })
            </td>
        </tr>
    }

    @if (!Model.Any())
    {
        <tr>
            <td colspan="3">
                <div class="alert alert-warning">
                    You have no SweetTests :(
                </div>
            </td>
        </tr>
    }

</table>
